<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
	SQL File Name : SchlDaoImpl.xml
	Description : 학교정보
-->
<mapper namespace="com.kbrinac.plum.front.schl.model.SchlDao">
    
    <!-- 학교 목록 조회 -->
    <select id="selectSchlList" parameterType="front.SchlVo" resultType="front.SchlVo">
        /* SchlDao.selectSchlList */
	    SELECT 
          A.*
	    FROM
	    	tb_schl_info A
	     WHERE 1=1
	     <if test="schlNm != null and schlNm != '' ">
	       AND SCHL_NM LIKE CONCAT( '%',#{schlNm},'%')
	     </if>
    </select>
</mapper>

